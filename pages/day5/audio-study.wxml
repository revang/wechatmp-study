<!-- audio.wxml -->
<audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}" id="myAudio" controls loop></audio>

<button type="primary" bindtap="audioPlay" class='btnType'>播放</button>
<button type="primary" bindtap="audioPause" class='btnType'>暂停</button>
<button type="primary" bindtap="audio14" class='btnType'>设置当前播放时间为14秒</button>
<button type="primary" bindtap="audioStart" class='btnType'>回到开头</button>
